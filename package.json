{
    "name": "template",
    "version": "0.0.1",
    "description": "Template for nodejs app with fastify",
    "main": "app.js",
    "docker_image": "samuray/template",
    "scripts": {
        "prepare:commitlint": "rimraf ./.husky && husky install && npx husky add .husky/commit-msg \"npx --no-install commitlint --config _common/configs/commitlint.js --edit $1 --verbose\"",
        "up": "ncu --reject /node-fetch$/ && ncu --reject /node-fetch$/ -u && rimraf ./package-lock.json && rimraf ./.husky && npm i && ncu --reject /node-fetch$/",
        "ncu": "ncu --reject /node-fetch$/",
        "cz": "git add . && git cz",
        "build": "rimraf ./dist && tsc --project ./tsconfig.json && json-key-remover --config ./_common/remover.json && files-copier -e build",
        "start": "node ./dist/app.js --config ./config.toml",
        "start:dev": "ts-node ./src/app.ts --config ./config.toml",
        "test:e2e": "start-server-and-test test:e2e:start_server http-get://localhost:3000/api/healthcheck test:e2e:testing",
        "test:e2e:start_server": "ts-node ./src/app.ts --config ./tests/e2e/config.toml",
        "test:e2e:testing": "jest --config ./tests/e2e.config.json",
        "test": "npm run test:e2e",
        "docker:build": "node ./_common/build/build.js",
        "docker:publish": "npm run docker:build && node ./_common/build/tag.js && node ./_common/build/push_version.js && node ./_common/build/push_latest.js",
        "interface_generator": "node ./_common/tools/interface_generator.js ./_common/interface_generator.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samurayii/template-app-starter.git"
    },
    "keywords": [
        "typescript",
        "fastify",
        "template"
    ],
    "author": "Nuzhnov A.A.",
    "license": "GNU GPLv3",
    "bugs": {
        "url": "https://github.com/samurayii/template-app-starter/issues"
    },
    "homepage": "https://github.com/samurayii/template-app-starter.git#readme",
    "optionalDependencies": {
        "@types/chai": "^4.2.22",
        "@commitlint/cli": "^14.1.0",
        "@types/jest": "^27.0.2",
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "chai": "^4.3.4",
        "commitizen": "^4.2.4",
        "cz-customizable": "^6.3.0",
        "eslint": "^8.2.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "madge": "^5.0.1",
        "npm-check-updates": "^12.0.2",
        "start-server-and-test": "^1.14.0",
        "ts-node": "^10.4.0",
        "ts-jest": "^27.0.7"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/node-fetch": "^2.5.12",
        "files-copier": "^0.1.1",
        "json-key-remover": "^0.1.4",
        "node-fetch": "^3.0.0",
        "rimraf": "^3.0.2",
        "typescript": "^4.4.4"
    },
    "copier": {
        "build": {
            "rewrite": true,
            "copy": [
                {
                    "from": "./package-lock.json",
                    "to": "./dist/package-lock.json"
                }
            ]
        }
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": "_common/configs/commitizen.js"
        }
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "commander": "^8.3.0",
        "fastify-helpers": "^0.2.6",
        "fastify-small-logger": "^1.8.11",
        "json-from-default-schema": "^1.0.1",
        "jtomler": "^1.0.1"
    }
}
